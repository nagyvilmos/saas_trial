<% if @user.profile %>
  <div class="row">
    <div class="col-md-3 text-center">
        <% if @user.profile.avatar_file_name %>
            <%= image_tag @user.profile.avatar.url( :thumb ), class: "profile-avatar" %>
        <% else %>
            <p class="text-center">No Avatar Privided</p>
        <% end %>
    </div>
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3>
            <span class="job-title-icon">
                <%= job_title_icon %>
            </span>
            <%= @user.profile.job_title %>
        </h3>
    
        <div class="well profile-block user-description">
            <h3>Professional Profile</h3>
            <p><%= @user.profile.description %></p>
        </div>

        <% if current_user.plan_id == 2 || current_user.id == @user.id %>
            <div class="well profile-block contact-info">
                <h3>Contact Information</h3>
                <p>Telephone: <%= @user.profile.phone_number %></p>
                <p>E-mail: <%= @user.profile.contact_email %></p>
            </div>
        <% end %>
    </div>
<% else %>
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center">user profile not provided</h3>
    </div>
<% end %>
